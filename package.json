{
  "name": "hardhat-project",
  "scripts": {
    "contracts-test": "cd ./contracts/hardhat && npx hardhat test",
    "deploy:kovan": "cd ./contracts/hardhat && npx hardhat run ../scripts/deploy.js --network \"kovan\"",
    "deploy:halo-kovan": "cd ./contracts/hardhat && npx hardhat run ../scripts/deployHalo.js --network \"kovan\"",
    "deploy:onlyrewards-kovan": "cd ./contracts/hardhat && npx hardhat run ../scripts/deployOnlyRewardsContract.js --network \"kovan\"",

    "start": "cd ./frontend && yarn start"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "chai": "^4.3.3",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.31",
    "hardhat": "^2.1.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.4.1",
    "dotenv": "^8.2.0"
  }
}
